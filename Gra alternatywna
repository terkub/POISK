import pygame

#zaczyna pracę pygame
pygame.init()
#tworzy okno
gameWindow = pygame.display.set_mode((1000, 600))
#nadaje tytuł dla okna
pygame.display.set_caption("Biegający kwadracik jeee")

class PlayerActive():
    def __init__(self):

          self.image = pygame.Surface((100, 100))
          self.image.fill((0, 0, 255))
          self.rect = self.image.get_rect()

          self.rect.x = 100
          self.rect.y = 100

          self.speed = 2

    def move(self, xdir, ydir):
        self.rect.x += xdir*self.speed
        self.rect.y += ydir*self.speed
        #player.image.fill()
        

player = PlayerActive()

#tu zaczyna się gra
gameActiv = True
#pętla jakby łapie kod tak, żeby nie znikał ekran z monitora 
while gameActiv:
    for event in pygame.event.get():
        #print event
        if event.type == pygame.QUIT:
            gameActiv = False

        #zmienna, która przyjmuje wartość aktualnie wciśniętego klawisza
    activeKey = pygame.key.get_pressed()
        #player.move jest zdefiniowany w klasie ActivePlayer
    if activeKey[pygame.K_RIGHT]:
        player.move(1,0)
    if activeKey[pygame.K_LEFT]:
        player.move(-1,0)
    if activeKey[pygame.K_UP]:
        player.move(-1,0)
    if activeKey[pygame.K_DOWN]:
        player.move(1,0)
 
    #This is where stuff happens
        #zmienia kolor tła na biały
    gameWindow.fill((255, 255, 255))
            
            #rysuje kwadrat: gdzie : kolor : lokalizacja : 5 to szerokość
            #kreski, jeśli tego nie ma, automatycznie się wypełnia
    pygame.draw.rect(gameWindow, (255, 0,0), (100,100,100,100), 5)
    pygame.draw.rect(gameWindow, (255, 0,0), (100,300,100,100))

        #kreuje obiekt o wymiarach
    surf = pygame.Surface((150, 75))
         #teraz będzie widoczny, ma kolor
    surf.fill((0, 255, 0))
         # blit: w gameWindow narysuj tę rzecz w tym miejscu
    gameWindow.blit(surf, (500, 200))

    gameWindow.blit(player.image, player.rect)
    

    pygame.display.update()

    #This is where stuff ends



#kończy pracę pygame
pygame.quit()
#zamyka okno (jakby ten konkretny kod wyłącza)
quit() 
